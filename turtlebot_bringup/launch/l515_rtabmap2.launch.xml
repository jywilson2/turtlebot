<launch>
  <arg name="database_path"     default="rtabmap.db"/>
  <arg name="rgbd_odometry"     default="false"/>
  <arg name="rtabmapviz"        default="true"/>
  <arg name="localization"      default="false"/>
  <arg name="simulation"        default="false"/>
  <arg name="sw_registered"     default="false"/>
  
  <arg     if="$(arg localization)" name="rtabmap_localization_arg"  default=""/>
  <arg unless="$(arg localization)" name="rtabmap_localization_arg"  default="--delete_db_on_start"/>

  <arg     if="$(arg simulation)" name="rgb_topic"   default="/camera/rgb/image_raw"/>
  <!-- <arg unless="$(arg simulation)" name="rgb_topic"   default="/camera/rgb/image_rect_color"/> -->
  <arg unless="$(arg simulation)" name="rgb_topic"   default="/camera/aligned_depth_to_color/image_raw"/>
  
  <arg     if="$(arg simulation)" name="depth_topic" default="/camera/depth/image_raw"/>
  <!-- <arg unless="$(arg simulation)" name="depth_topic" default="/camera/depth_registered/image_raw"/> -->
  <arg unless="$(arg simulation)" name="depth_topic" default="/camera/depth/image_rect_raw"/>  
  
  <!-- <arg name="camera_info_topic" default="/camera/rgb/camera_info"/> -->
  <arg name="camera_info_topic" default="/camera/depth/camera_info"/>
  
  <arg name="wait_for_transform"  default="0.5"/> 
  <!-- 
      robot_state_publisher's publishing frequency in "turtlebot_bringup/launch/includes/robot.launch.xml" 
      can be increase from 5 to 10 Hz to avoid some TF warnings.
  -->
  
  <!-- Navigation stuff (move_base) -->
  <!-- 
  <include unless="$(arg simulation)" file="$(find turtlebot_bringup)/launch/3dsensor.launch">
     <arg     if="$(arg sw_registered)" name="depth_registration" value="false"/>
     <arg unless="$(arg sw_registered)" name="depth_registration" value="true"/>
  </include>
  -->
  
  <!-- 
  $ roslaunch realsense2_camera rs_camera.launch \
    align_depth:=true \
    unite_imu_method:="linear_interpolation" \
    enable_gyro:=true \
    enable_accel:=true
  -->    
  <include file="$(find realsense2_camera)/launch/rs_camera.launch">
    <arg name="align_depth" type="bool" value="true"/>
    <arg name="unite_imu_method" type="string" value="linear_interpolation"/>
    <arg name="enable_gyro" type="bool" value="true"/>
    <arg name="enable_accel" type="bool" value="true"/>
  </include> 
  
  <!-- 
  rosrun imu_filter_madgwick imu_filter_node \
    _use_mag:=false \
    _publish_tf:=false \
    _world_frame:="enu" \
    /imu/data_raw:=/camera/imu \
    /imu/data:=/rtabmap/imu
  -->    
  <node name="imu_filter_node" pkg="imu_filter_madgwick" type="imu_filter_node" output="screen" args="">
    <param name="use_mag" type="bool" value="false"/>
    <param name="publish_tf" type="bool" value="false"/>
    <param name="world_frame" type="string" value="enu"/>
    <remap from="/imu/data_raw" to="/camera/imu"/>
    <remap from="/imu/data" to="/rtabmap/imu"/>
  </node>
  
  <include file="$(find turtlebot_navigation)/launch/includes/move_base.launch.xml"/>
  
  <!-- Mapping -->
  
  <!-- 
  rosrun nodelet nodelet standalone rtabmap_ros/point_cloud_xyz \
    _approx_sync:=false  \
    /depth/image:=/camera/depth/image_rect_raw \
    /depth/camera_info:=/camera/depth/camera_info \
    _decimation:=4  
   -->
  <node name="rtabmap_ros_nodelet" pkg="nodelet" type="nodelet" args="standalone rtabmap_ros/point_cloud_xyz">
    <param name="approx_sync" type="bool" value="false"/>
    <remap from="/depth/image" to="$(arg depth_topic)"/>
    <remap from="/depth/camera_info" to="$(arg camera_info_topic)"/>
    <param name="decimation" type="string" value="4"/>
  </node>
  
  <group ns="rtabmap">

    <node name="rtabmap" pkg="rtabmap_ros" type="rtabmap" output="screen" args="$(arg rtabmap_localization_arg)">
      <param name="database_path"       type="string" value="$(arg database_path)"/>
      <param name="frame_id"            type="string" value="base_footprint"/>
      <param name="wait_for_transform_duration"  type="double"   value="$(arg wait_for_transform)"/>
      <param name="subscribe_depth"     type="bool"   value="true"/>
      <param name="subscribe_scan"      type="bool"   value="false"/>
      <param name="subscribe_scan_cloud" type="bool"  value="false"/>
      <param name="gen_scan"            type="bool"   value="false"/>
      <param name="map_negative_poses_ignored" type="bool" value="true"/>
      
      <!-- From the roslaunch example for hand scanning with the l515 -->
      <param name="icp_odometry" type="bool" value="true"/>
      <param name="scan_cloud_topic" type="string" value="/cloud"/>
      <param name="approx_sync" type="bool" value="false"/>
      <param name="wait_imu_to_init" type="bool" value="true"/>
      <param name="imu_topic" type="string" value="/rtabmap/imu"/>

      <!-- When sending goals on /rtabmap/goal topic, use actionlib to communicate with move_base --> 
      <param name="use_action_for_goal" type="bool" value="true"/>
      <remap from="move_base"            to="/move_base"/>
    
      <!-- inputs -->
      <remap from="scan"            to="/scan"/>
      <remap from="rgb/image"       to="$(arg rgb_topic)"/>
      <remap from="depth/image"     to="$(arg depth_topic)"/>
      <remap from="rgb/camera_info" to="$(arg camera_info_topic)"/>

      <!-- Fix odom covariance as in simulation the covariance in /odom topic is high (0.1 for linear and 0.05 for angular) -->
      <param unless="$(arg rgbd_odometry)" name="odom_frame_id" type="string" value="odom"/>
      <param unless="$(arg rgbd_odometry)" name="odom_tf_linear_variance" type="string" value="0.001"/>
      <param unless="$(arg rgbd_odometry)" name="odom_tf_angular_variance" type="string" value="0.001"/>
      
      <!-- output -->
      <remap from="grid_map" to="/map"/>
    
      <!-- RTAB-Map's parameters: do "rosrun rtabmap rtabmap (double-dash)params" to see the list of available parameters. -->
      <param name="Reg/Strategy"                 type="string" value="1"/>      <!-- Loop closure transformation: 0=Visual, 1=ICP, 2=Visual+ICP -->
      <param name="Icp/CorrespondenceRatio"      type="string" value="0.2"/>
      <param name="RGBD/ProximityPathMaxNeighbors" type="string" value="1"/> 
      <param name="Grid/FromDepth"               type="bool"   value="true"/>
      <param name="Icp/VoxelSize"                type="string" value="0.05"/>
      <param name="Icp/PointToPlaneRadius"       type="string" value="0"/>
      <param name="Icp/PointToPlaneK"            type="string" value="20"/>
      <param name="Icp/PMOutlierRatio"           type="string" value="0.65"/>
      <param name="Icp/Epsilon"                  type="string" value="0.005"/>
      <param name="Icp/PointToPlaneMinComplexity" type="string" value="0"/>
      <param name="Odom/ScanKeyFrameThr"          type="string" value="0.7"/>
      <param name="OdomF2M/ScanMaxSize"           type="string" value="15000"/>
      <param name="Optimizer/GravitySigma"        type="string" value="0.3"/>
      
      <!-- localization mode -->
      <param if="$(arg localization)" name="Mem/IncrementalMemory" type="string" value="false"/>
      <param unless="$(arg localization)" name="Mem/IncrementalMemory" type="string" value="true"/>
      <param name="Mem/InitWMWithAllNodes" type="string" value="$(arg localization)"/> 
    </node>
   
    <!-- Odometry : ONLY for testing without the actual robot! /odom TF should not be already published. -->
    <node if="$(arg rgbd_odometry)" pkg="rtabmap_ros" type="rgbd_odometry" name="rgbd_odometry" output="screen">
      <param name="frame_id"                    type="string" value="base_footprint"/>
      <param name="wait_for_transform_duration" type="double" value="$(arg wait_for_transform)"/>
      <param name="Reg/Force3DoF"               type="string" value="true"/>
      <param name="Vis/InlierDistance"          type="string" value="0.05"/>
      
      <remap from="rgb/image"       to="$(arg rgb_topic)"/>
      <remap from="depth/image"     to="$(arg depth_topic)"/>
      <remap from="rgb/camera_info" to="$(arg camera_info_topic)"/>
    </node>
    
    <!-- visualization with rtabmapviz -->
    <node if="$(arg rtabmapviz)" pkg="rtabmap_ros" type="rtabmapviz" name="rtabmapviz" args="-d $(find rtabmap_ros)/launch/config/rgbd_gui.ini" output="screen">
      <param name="subscribe_depth"             type="bool" value="true"/>
      <param name="subscribe_scan"              type="bool" value="false"/>
      <param name="frame_id"                    type="string" value="base_footprint"/>
      <param name="wait_for_transform_duration" type="double" value="$(arg wait_for_transform)"/>
    
      <remap from="rgb/image"       to="$(arg rgb_topic)"/>
      <remap from="depth/image"     to="$(arg depth_topic)"/>
      <remap from="rgb/camera_info" to="$(arg camera_info_topic)"/>
      <remap from="scan"            to="/scan"/>
    </node>
    
  </group>  

</launch>
